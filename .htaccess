RewriteEngine on

RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]

RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [NC,L]

ErrorDocument 400 https://weber.cottonseeds.org/error-400
ErrorDocument 401 https://weber.cottonseeds.org/error-401
ErrorDocument 403 https://weber.cottonseeds.org/error-403
ErrorDocument 404 https://weber.cottonseeds.org/error-404
ErrorDocument 500 https://weber.cottonseeds.org/error-500