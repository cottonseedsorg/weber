RewriteEngine on

RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]

RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [NC,L]

ErrorDocument 400 https://weber.cottonseeds.org/this-is-bad-request
ErrorDocument 401 https://weber.cottonseeds.org/this-is-client-error
ErrorDocument 403 https://weber.cottonseeds.org/this-is-forbidden
ErrorDocument 404 https://weber.cottonseeds.org/this-url--doesnt-exist
ErrorDocument 500 https://weber.cottonseeds.org/this-is-internal-server-error